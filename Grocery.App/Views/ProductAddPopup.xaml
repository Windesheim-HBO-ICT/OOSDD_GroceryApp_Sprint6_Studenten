<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.ProductAddPopup"
             Title="AddProduct">

    <Border Stroke="#C49B33" StrokeThickness="4" Padding="10" Margin="10" HorizontalOptions="Center">
        <Grid Padding="10" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Text="Nieuw product toevoegen" FontSize="18" HorizontalOptions="Center"/>

            <VerticalStackLayout Grid.Row="1" Spacing="5">
                <Label Text="Naam"/>
                <Entry x:Name="NameEntry" Placeholder="ProductNaam"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2" Spacing="5">
                <Label Text="Voorraad"/>
                <Entry x:Name="StockEntry" Placeholder="Voorraad hoeveelheid" Keyboard="Numeric"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="3" Spacing="5">
                <Label Text="THT datum"/>
                <DatePicker x:Name="ShelfLifePicker" Format="dd-MM-yyyy"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="4" Spacing="5">
                <Label Text="Prijs (â‚¬)"/>
                <Entry x:Name="PriceEntry" Placeholder="0,00" Keyboard="Numeric"/>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="5" 
                                   Spacing="10" 
                                   HorizontalOptions="Center">
                <Button Text="Annuleren" 
                        Clicked="OnCancelClicked" 
                        BackgroundColor="LightGray" 
                        TextColor="Black" />
                <Button Text="Toevoegen" 
                        Clicked="OnAddClicked"
                        BackgroundColor="#C49B33" />
            </HorizontalStackLayout>
        </Grid>

    </Border>
</ContentPage>