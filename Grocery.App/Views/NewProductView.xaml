<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Text="Naam" HorizontalOptions="Center" VerticalOptions="Center" />
            <Entry  Grid.Row="0" Grid.Column="2" Placeholder="Naam van het product" Text="{Binding Name}" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Grid.Row="1" Grid.Column="0" Text="voorraad" />
            <Entry Grid.Row="1" Grid.Column="2" Placeholder="Naam van het product" Text="{Binding Stock}" />
        </Grid>
        <Button Text="Opslaan" Command="{Binding AddProductCommand}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>