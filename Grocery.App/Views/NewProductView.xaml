<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.NewProductView"
             Title="Nieuw product toevoegen">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Naam:" />
        <Entry Placeholder="Naam van het product" Text="{Binding Name}" />

        <Label Text="Voorraad:" />
        <Entry Placeholder="Aantal op voorraad" Text="{Binding Stock}" Keyboard="Numeric" />

        <Label Text="THT-datum:" />
        <DatePicker Date="{Binding ShelfLife}" />

        <Label Text="Prijs (â‚¬):" />
        <Entry Placeholder="Prijs" Text="{Binding Price}" Keyboard="Numeric" />

        <Button Text="Opslaan" Command="{Binding SaveCommand}" />

    </VerticalStackLayout>
</ContentPage>
